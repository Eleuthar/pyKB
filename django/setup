# Install Python, Pip (package manager), download pip-get.py 
python pip-get.py 
pip install django 

# Create new project directory structure   
django-admin startproject <pyKrobe> 
python <projectPath>\manage.py startapp <appName>  
 
# Launch localhost server 
Python <projectPath>\manage.py runserver 
 
# Run initial migration to create project database holding default tables (ex. auth_user). 
# All other migrations will update the database as per own database tables or models. 
python <projectPath>\manage.py migrate 

# Create admin account 
python <projectPath>\manage.py createsuperuser 

# Create app branch 
python3 manage.py startapp <app> 
     
# Add app in <project>\settings.py, @ INSTALLED_APPS 
  
# Define <app>Config  class in <app>\apps.py 
  
# Register models in <app>\apps.py 

# Define template folder structure within <appName> : 
<appName>\templates\<appName>\<htmlpage>.html 
 
